<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PasswordDotTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">54sp</item>
    </style>

    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:fontFamily">@font/tirtowritterregular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:windowBackground">@android:color/white</item> <!-- Set your desired background color -->
        <!-- Customize cursor color -->
        <item name="colorAccent">@color/purple_700</item>

        <!-- Customize OK button color -->
        <item name="android:colorButtonNormal">@color/purple_700</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>





    <style name="RoundedDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>